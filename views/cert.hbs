{{> header}}

        <div style="width:55%; margin: 25px auto">
            <form class="form-inline" action="/certinfo" method="GET">
                    <div class="form-group">
                            <div class="input-group">
                                    <input type="text" class="form-control" name="certNo" placeholder="인증서 일련번호">
                            </div>
                    </div>
                    <button type="submit" class="btn btn-primary">조 회</button>
            </form>
            <br>
            {{#if certNo}}
                <p>Certification No: {{certNo}}<p>
                <p>Account Type: {{accountType}}<p>
                <p>Account Issuer: {{issuerAccount}}<p>
                <p>Amount: {{accountAmount}}</p>
            {{/if}}
        </div> 
{{> footer}}